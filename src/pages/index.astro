---
import ProjectCard from "@/components/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";
import { ModeToggle } from "@/components/ModeToggle";
import { projects } from "@/data/projects";
---

<Layout title="Simple Projects">
  <h1
    class="mt-10 text-[clamp(2rem,10vmin,10rem)] leading-none text-center"
  >
    Vanilla Js Corner
  </h1>

  <!-- card -->
  <div class="mx-auto my-16 flex max-w-[90%] flex-wrap justify-center align-middle items-center gap-4">
    {
      projects.map((project) => (
        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
          <ProjectCard project={project} />
        </div>
      ))
    }
  </div>

  <div class="fixed right-7 bottom-14 z-10">
    <ModeToggle client:load />
  </div>
</Layout>
